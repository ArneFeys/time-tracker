pipeline{
    agent any

    stages{
        stage ('Compile Stage'){
            steps {
                def mvnHome = tool name: 'Maven_3', type: 'maven'
                sh "${mvnHome}/bin/mvn package"

            }
        }
        stage ('Testing Stage'){
            steps {
                withMaven(maven : 'Maven_3'){
                    sh 'mvn test'
                }
            }
        }
        stage ('Deployment Stage'){
            steps {
                withMaven(maven : 'Maven_3'){
                    sh 'mvn deploy'
                }
            }
        }
    }
}
