pipeline{
    agent any

    stages{
        stage ('Compile Stage'){
            steps {
                sh 'set M2_HOME = C:\DevTools\Maven\apache-maven-3.6.0'
                sh 'set PATH=C:\DevTools\Maven\apache-maven-3.6.0\bin'
                sh 'set PATH=%PATH%;C:\Windows\System32'
m               sh 'mvn clean package'
            }
        }
        stage ('Testing Stage'){
            steps {
                withMaven(maven : 'Maven_3'){
                    sh 'mvn test'
                }
            }
        }
        stage ('Deployment Stage'){
            steps {
                withMaven(maven : 'Maven_3'){
                    sh 'mvn deploy'
                }
            }
        }
    }
}
